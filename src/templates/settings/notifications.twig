{% extends "enupal-paypal/_layouts/settings" %}
{% import "_includes/forms" as forms %}

{% set settings = craft.paypalButton.getSettings() %}
{% set fullPageForm = true %}
{% set saveShortcutRedirect = 'enupal-paypal/settings/notifications' %}

{% set saveButton %}
    <div class="buttons">
        <input class="btn submit" type="submit"
               value="{{ 'Save'|t('enupal-paypal') }}">
    </div>
{% endset %}

{% set content %}
    <input type="hidden" name="action"
           value="enupal-paypal/settings/save-settings">
    <input type="hidden" name="paypalScenario" value="notification">
    <div id="settings-cp">
        {% namespace 'settings' %}

            {{ forms.lightswitchField({
                first: true,
                label: "Enable Email Notification"|t('enupal-paypal'),
                id: 'enableNotification',
                name: 'enableNotification',
                on: settings.enableNotification,
                onLabel: "Enable",
                offLabel: "Disable",
                errors: settings.getErrors('enableNotification')
            }) }}

            {{ forms.textField({
                label: 'Email Recipients'|t('enupal-paypal'),
                instructions: "A comma-delimited list of email addresses to notify when your backup is finished."|t('enupal-paypal'),
                name: 'notificationRecipients',
                value: settings.notificationRecipients,
                errors: (settings is defined ? settings.getErrors('notificationRecipients') : null),
                first: true
            }) }}

            {{ forms.textField({
                label: "Sender Name"|t('enupal-paypal'),
                instructions: "The name of the sender of your notification email"|t('enupal-paypal'),
                name: 'notificationSenderName',
                value: settings.notificationSenderName,
                errors: (settings is defined ? settings.getErrors('notificationSenderName') : null)
            }) }}

            {{ forms.textField({
                label: "Sender Email Address"|t('enupal-paypal'),
                instructions: "The 'From' email address of your notification email"|t('enupal-paypal'),
                name: 'notificationSenderEmail',
                value: settings.notificationSenderEmail,
                errors: (settings is defined ? settings.getErrors('notificationSenderEmail') : null)
            }) }}

            {{ forms.textField({
                label: "Reply To Email Address"|t('enupal-paypal'),
                instructions: "The 'Reply To' email address of your notification email"|t('enupal-paypal'),
                name: 'notificationReplyToEmail',
                value: settings.notificationReplyToEmail,
                errors: (settings is defined ? settings.getErrors('notificationReplyToEmail') : null)
            }) }}

        {% endnamespace %}
    </div>

{% endset %}