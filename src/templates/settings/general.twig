{% extends "enupal-paypal/_layouts/settings" %}
{% import "_includes/forms" as forms %}

{% set settings = craft.enupalPaypal.getSettings() %}
{% set fullPageForm = true %}
{% set saveShortcutRedirect = 'enupal-paypal/settings/general' %}

{% set saveButton %}
    <div class="buttons">
        <input class="btn submit" type="submit" value="{{ 'Save'|t }}">
    </div>
{% endset %}

{% set content %}

    <input type="hidden" name="action"
           value="enupal-paypal/settings/save-settings">

    <div id="settings-cp">

        {% namespace 'settings' %}
            {{ forms.field({
                label: "General settings"|t('enupal-paypal')|upper
            }, null) }}
            <hr>

            {{ forms.lightswitchField({
                label: 'Test Mode'|t('enupal-paypal'),
                instructions: 'Check this option if you want to enable PayPal sandbox for testing',
                id: 'testMode',
                name: 'testMode',
                on: settings.testMode,
                onLabel: "On"|t('enupal-paypal'),
                offLabel: "Off"|t('enupal-paypal'),
                errors: settings.getErrors('testMode'),
            }) }}

            <hr>

            {{ forms.textField({
                label: "Live Account"|t('enupal-paypal'),
                instructions: "Live Account"|t('enupal-paypal'),
                id: 'liveAccount',
                name: 'liveAccount',
                value: settings.liveAccount,
                autofocus: true,
                errors: settings.getErrors('liveAccount')
            }) }}

            {{ forms.textField({
                label: "Sandbox Account"|t('enupal-paypal'),
                instructions: "Sandbox Account"|t('enupal-paypal'),
                id: 'sandboxAccount',
                name: 'sandboxAccount',
                value: settings.sandboxAccount,
                autofocus: true,
                errors: settings.getErrors('sandboxAccount')
            }) }}
            <hr>
            {{ forms.textField({
                label: "Global Return URL"|t('enupal-paypal'),
                instructions: "Redirect the user to this URL when the pay is successfully"|t('enupal-paypal'),
                id: 'returnUrl',
                name: 'returnUrl',
                placeholder: '/thank-you',
                value: settings.returnUrl,
                autofocus: true,
                errors: settings.getErrors('returnUrl')
            }) }}

            {{ forms.textField({
                label: "Global Cancel URL"|t('enupal-paypal'),
                instructions: "Redirect the user to this URL when they click the cancel button"|t('enupal-paypal'),
                id: 'cancelUrL',
                name: 'cancelUrL',
                placeholder: '/something-went-wrong',
                value: settings.cancelUrL,
                autofocus: true,
                errors: settings.getErrors('cancelUrL')
            }) }}

        {% endnamespace %}

    </div>

{% endset %}