{% extends "enupal-paypal/_layouts/settings" %}
{% import "_includes/forms" as forms %}

{% set settings = craft.enupalbackup.getSettings() %}
{% set fullPageForm = true %}
{% set saveShortcutRedirect = 'enupal-paypal/settings/ftp' %}

{% set saveButton %}
	<div class="buttons">
		<input class="btn submit" type="submit" value="{{ 'Save'|t('enupal-paypal') }}">
	</div>
{% endset %}

{% set content %}

	<input type="hidden" name="action" value="enupal-paypal/settings/save-settings">
	<input type="hidden" name="backupScenario" value="ftp">

	<div id="settings-cp">

		{% namespace 'settings' %}

			{{ forms.lightswitchField({
				label: "Enable FTP"|t('enupal-paypal'),
				id: 'enableFtp',
				name: 'enableFtp',
				on: settings.enableFtp,
				onLabel: "On"|t('enupal-paypal'),
				offLabel: "Off"|t('enupal-paypal'),
				errors: settings.getErrors('enableFtp'),
			}) }}

			{{ forms.selectField({
				label: "Type"|t('app'),
				id: 'ftpType',
				name: 'ftpType',
				options: {'ftp': 'FTP', 'sftp': 'SFTP'},
				value: settings.ftpType,
				required: true,
			}) }}

			{{ forms.textField({
				label: "Host"|t('enupal-paypal'),
				id: 'ftpHost',
				name: 'ftpHost',
				instructions: "The host you want do copy your backups to."|t('enupal-paypal'),
				value: settings.ftpHost,
				required: true,
				autofocus: true,
				first: true,
				errors: ''
			}) }}

			{{ forms.textField({
				label: "User"|t('enupal-paypal'),
				id: 'ftpUser',
				name: 'ftpUser',
				instructions: "The user you want to connect with."|t('enupal-paypal'),
				value: settings.ftpUser,
				required: true,
				autofocus: true,
				first: true,
				errors: ''
			}) }}

			{{ forms.textField({
				label: "Password"|t('enupal-paypal'),
				id: 'ftpPassword',
				name: 'ftpPassword',
				instructions: "The password to authenticate the user."|t('enupal-paypal'),
				value: settings.ftpPassword,
				type: "password",
				required: true,
				autofocus: true,
				first: true,
				errors: ''
			}) }}

			{{ forms.textField({
				label: "Path"|t('enupal-paypal'),
				id: 'ftpPath',
				name: 'ftpPath',
				instructions: "The remote path where to copy the backup."|t('enupal-paypal'),
				value: settings.ftpPath,
				autofocus: true,
				first: true,
				errors: ''
			}) }}

		{% endnamespace %}

	</div>

{% endset %}